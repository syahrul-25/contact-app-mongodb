<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <h2 class="text-center">Daftar Contact</h2>
      <% if (msg.length) { %>
        <div class="alert alert-success" role="alert">
          <%= msg %> 
        </div>
      <% } %>
      <a href="/contact/add" class="btn btn-primary mb-2">Tambah Data Contact</a>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Nama</th>
            <th scope="col">Nomor Handphone</th>
            <th scope="col">Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% if (contacts.length > 0) { %> 
          <% contacts.forEach((contact, index) => { %>
          <tr>
            <th scope="row"><%= (index + 1) %></th>
            <td><%= contact.nama %></td>
            <td><%= contact.noHp %></td>
            <td>
              <a
                href="/contact/<%= contact.nama %> "
                class="btn btn-success badge rounded-pill"
              >
                <i class="bi bi-info-circle"></i> Detail
              </a>
            </td>
          </tr>
          <% }) %> <% } else { %>
            <tr>
              <td colspan="4">
                <div class="alert alert-danger fw-bold" role="alert">
                Data Contact Masih Kosong
                </div>
              </td>
            </tr>
          
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>
